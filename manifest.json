{
    "manifest_version": 3,
    "name": "HNPES - Hacker News Previous Entry Search",
    "description": "Search for previous entries for the current URL on Hacker News",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Search on Hacker News"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://hn.algolia.com/*"
    ]
}
